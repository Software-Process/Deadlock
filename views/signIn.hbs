	<body>
		{{>header}}
		<div class="jumbotron" style="margin-top: 50px">
			<div class="container">
				<h1>Join our community!</h1>
			</div>
		</div>
		<div class="container page-body">
			<div class="row vdivide">
				<div class="col-sm-6 login-section">
					<h2 class="form-heading">Login</h2>
					<form>
						<div class="form-group">
							<label for="inputsm"><span class="form-heading">Username:</span></label>
							<input input type="text" class="form-control" id="username" name="username">
						</div>					
						<div class="form-group" >
							<label for="inputsm"><span class="form-heading">Password:</span></label>
							<input type="password" class="form-control" id="password" name="password">
						</div>
						<input type="submit" value="Log in" class="btn btn-default">
					</form>
				</div>
				<div class="col-sm-6 register-section">
					<h2 class="form-heading">Register</h2>
					<form>
						<div class="form-group">
							<label for="inputsm"><span class="form-heading">Username:</span></label>
							<input type="text" class="form-control" id="username" name="username">
						</div>

							<input type="password" class="form-control" id="verifyPassword" name="verifyPassword">
						</div>
-->
						<input type="submit" value="Register" class="btn btn-default">
					</form>
				</div>
			</div>
		</div>			
	    {{>footer}}
	</body>
</html>